<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/transparent_rounded_corner"/>

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="28sp"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_time"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/recipe_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time to Make"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:textColor="@color/colorTextPrimary" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


                <ImageButton
                    android:id="@+id/send_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_send"
                    android:textSize="18sp"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@color/colorHighlight" />

                <ImageButton
                    android:id="@+id/add_to_favorites_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_add_to_fav"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorHighlight" />


        </LinearLayout>

        <TextView
            android:id="@+id/recipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:text="Ingredients"
            android:textColor="@color/colorSecondary"/>

        <TextView
            android:id="@+id/recipeIngredientsContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorTextPrimary"/>

        <TextView
            android:id="@+id/recipeInstructionsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:text="Instructions"
            android:textColor="@color/colorSecondary"/>

        <TextView
            android:id="@+id/recipeInstructionsContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>
</ScrollView>
